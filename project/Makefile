all: libLcd.a main.elf

CPU             = msp430g2553
CFLAGS          = -mmcu=${CPU} -Os -I../h 
LDFLAGS 	= -L/opt/ti/msp430_gcc/include -L../lib 
#switch the compiler (for the internal make rules)
CC              = msp430-elf-gcc
AS              = msp430-elf-as -mmcu=${CPU} -c
AR		= msp430-elf-ar
libLcd.a: font-5x7.o font-11x16.o font-8x12.o lcdutils.o lcddraw.o tennis.o
	$(AR) crs $@ $^

lcddraw.o: lcddraw.c lcddraw.h lcdutils.h
lcdutils.o: lcdutils.c lcdutils.h
tennis.o: tennis.c tennis.h

install: libLcd.a
	mkdir -p ../h ../lib
	mv $^ ../lib
	cp *.h ../h

clean:
	rm -f libLcd.a *.o *.elf

main.elf: ${COMMON_OBJECTS} main.o libLcd.a wdt_handler.o buzzer.o sound_effect.o ball.o paddles.o collisions.o score_board.o
	$(CC) $(CFLAGS) $(LDFLAGS) -o $@ $^ -lTimer -lLcd  
load: main.elf
	msp430loader.sh $^
